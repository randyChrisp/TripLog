@model TLViewModel

@{ 
    ViewBag.Title = "Add Trip - Page 1";
    ViewBag.SubHeader = "Add Trip Destination and Dates";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Add">
    <input type="hidden" asp-for="Page"/>

    <div class="row form-group">
        <label asp-for="Trip.DestinationId">Destination:</label>
        <a asp-action="Index" asp-controller="Manage" class="ml-4">Add Destinations</a>
        <select asp-for="Trip.DestinationId" class="form-control" asp-items="@(new SelectList(Model.Destinations, "DestinationId", "Dest"))">
            <option value="0"></option>
        </select>
    </div>

    <div class="row form-group">
        <label asp-for="Trip.AccommodationId">Accommodation:</label>
        <a asp-action="Index" asp-controller="Manage" class="ml-4">Add Accommodations</a>
        <select asp-for="Trip.AccommodationId" class="form-control" asp-items="@(new SelectList(Model.Accommodations, "AccommodationId", "Name"))">
            <option value="0"></option>
        </select>
    </div>

    <div class="row form-group">
        <label asp-for="Trip.StartDate">Start Date:</label>
        <input asp-for="Trip.StartDate" class="form-control" />
    </div>

    <div class="row form-group">
        <label asp-for="Trip.EndDate">End Date:</label>
        <input asp-for="Trip.EndDate" class="form-control" />
    </div>

    <div>
        <button type="submit" class="btn btn-dark">Next</button>
        <a asp-action="Clear" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>

